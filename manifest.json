{
  "manifest_version": 3,
  "name": "Trello Booster",
  "version": "1.0.0",
  "action": {
    "default_popup": "dist/popup.html"
  },
  "permissions": ["storage", "activeTab", "identity"],
  "host_permissions": [
    "https://trello.com/*",
    "https://api.trello.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://trello.com/*"],
      "js": ["dist/content.js"]
    }
  ],
  "background": {
    "service_worker": "dist/background.js"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+L",
        "mac": "Command+Shift+L"
      },
      "description": "Open Trello Booster"
    }
  }
}
